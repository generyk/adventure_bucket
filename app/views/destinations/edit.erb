<h1>Edit Destination</h1>

<form action="/destinations/<%= @destination.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" name="destination[name]" value="<%=@destination.name%>"/><br />
  <label>Description: </label>
  <textarea rows="12" cols="80" type="text" name="destination[description]" value="<%=@destination.description%>"></textarea><br />
  <input type="submit" value="Edit Destination">
</form>